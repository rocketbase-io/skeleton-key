{
  "name": "@rocketbase/skeleton-key",
  "version": "0.4.2",
  "description": "A Client-Side JS Authentication and Authorization Library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "*.md",
    "docs"
  ],
  "scripts": {
    "test": "karma start karma-ci.conf.js",
    "test:local": "karma start karma.conf.js",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --fix --project tsconfig.json",
    "lint:fix:commit": "npm run lint:fix && git add src && git commit -m 'linter changes'",
    "build": "webpack",
    "watch": "webpack --watch",
    "docs": "typedoc --out docs src",
    "authors": "ngm authors --md --out AUTHORS.md",
    "changelog": "ngm changelog --md --out CHANGELOG.md",
    "prepublish": "npm run lint:fix && npm run build && npm run authors && npm run changelog && git add AUTHORS.md CHANGELOG.md && git commit -m 'update authors and changelog'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rocketbase-io/skeleton-key.git"
  },
  "keywords": [
    "js",
    "auth",
    "commons-auth"
  ],
  "author": "Rocketbase Team <team@rocketbase.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rocketbase-io/skeleton-key/issues"
  },
  "homepage": "https://github.com/rocketbase-io/skeleton-key#readme",
  "devDependencies": {
    "@propero/ngm": "^1.2.1",
    "@types/axios": "^0.14.0",
    "@types/fetch-mock": "^7.3.1",
    "@types/jasmine": "^3.4.0",
    "@types/node": "^12.0.7",
    "dts-bundle": "^0.7.3",
    "fetch-mock": "^7.3.9",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine": "^3.4.0",
    "karma": "^4.2.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "^1.1.2",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "^2.0.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.2",
    "puppeteer": "^1.19.0",
    "remove-empty-directories": "0.0.1",
    "ts-loader": "^6.0.4",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.17.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.1",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "xhr-mock": "^2.5.0"
  },
  "dependencies": {
    "axios": "^0.19.0"
  },
  "publishConfig": {
    "@rocketbase:registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
